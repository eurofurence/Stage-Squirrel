<% var title = 'Stage Squirrel - Login'; %>
<% include ./partials/page-begin %>

<div class="col-sm-6 col-sm-offset-2">
    <h1>
        <span class="fa fa-sign-in"></span> Stage Squirrel - Login
    </h1>

    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form class="js-login-form" action="/login" method="post">
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email" />
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password" />
        </div>
        <input type="hidden" name="login-form-hash" value="" />
        <button type="submit" class="btn btn-primary btn-lg">Login</button>
    </form>

    <hr>
    <p>Need an account? <a href="/signup">Signup</a></p>
</div>
<div class="col-sm-2" id="sq-logo">
    <img src="images/sq-logo.png">
</div>

<script>
    //-- Add some hash to login-form, if available
    $(document).ready(function submitHash() {
        if (window.location.hash != '') {
            $('js-login-form > input[name="login-form-hash"]')
                .val(window.location.hash);
            window.location.hash = '';
        }
    });
</script>

<% include ./partials/page-end %>