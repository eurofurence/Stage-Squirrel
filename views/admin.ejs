<% var title = 'Stage Squirrel - Admin Configuration'; %>
<% include ./partials/page-begin %>

<div class="page-header text-center">
    <h1><span class="glyphicon glyphicon-cog"></span> Admin Configuration</h1>
</div>
<div class="row">
    <!-- LOCAL INFORMATION -->
    <div class="col-sm-6">
        <div class="well">
            <h3><span class="glyphicon glyphicon-globe"></span> Global</h3>
            <p>
                <form action="<%= locals.baseUrlInfo.pathname %>admin" method="post">
                    <% for (cfg of configurations) { %>
                    <div class="form-group">
                        <label><%= cfg.configuration_title %></label>
                        <input type="text" class="form-control" name="<%= cfg.configuration_key %>" value="<%= cfg.configuration_value %>">
                    </div>
                    <% } %>
                    <button type="submit" name="actionType" value="global" class="btn btn-primary btn-lg">Save</button>
                </form>
            </p>
        </div>
    </div>
    <div class="col-sm-10">
        <table class="table">
            <thead>
                <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Email</th>
                <th>Role</th>
                <th>Created</th>
                <th>Last Login</th>
                <th>Active</th>
                <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <form action="<%= locals.baseUrlInfo.pathname %>admin" method="post">
                    <input type="hidden" name="actionType" value="user">
                    <% for (one of allusers) { %>
                    <tr>
                        <td><%= one.user_id %></td>
                        <td><%= one.user_name %></td>
                        <td><%= one.user_mail %></td>
                        <td><%= one.user_role %></td>
                        <td><%= new Date(one.user_created).toLocaleString() %></td>
                        <td><%= new Date(one.user_last_login).toLocaleString() %></td>
                        <td>
                            <span class="label label-<%= one.user_active ? 'success' : 'warning' %>">
                                <%= one.user_active ? '' : 'in' %>active
                            </span>
                        </td>
                        <td>
                            <button
                                type="submit"
                                class="btn btn-primary btn-xs"
                                name="<%= one.user_active ? 'de' : '' %>activation"
                                value="<%= one.user_id %>"
                                >
                                <%= one.user_active ? 'de' : '' %>activate
                            </button>
                        </td>
                    </tr>
                    <% } %>
                </form>
            </tbody>
        </table>
    </div>
</div>

<% include ./partials/page-end %>